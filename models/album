const mongoose = require("mongoose");

const Schema = mongoose.Schema;

const albumSchema = new Schema({

    title: {

        type: String,

        required: true
    },

    artist: {

        type: String,

        required: true
    },

    imageUrl: {

        type: String,

        required: true,
    },

    year: {

        type: Number,

        required: true
    }

}, {timestamps: true});


module.exports = mongoose.model("Album", albumSchema);

