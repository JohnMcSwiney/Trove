const mongoose = require("mongoose");

const Schema = mongoose.Schema;

const songSchema = new Schema({

    title: {

        type: String,

        required: true
    },

    artist: {

        type: String,

        required: true
    },

    album: {

        type: mongoose.Schema.Types.ObjectId,
        
        ref: "Album",

        default: null
    },

    genre: {

        type: String,

        required: true
    },

    songUrl: {

        type: String,

        required: true,

    },

    imageUrl: {

        type: String,

        required: true,
    },

    year: {

        type: Number,

        required: true
    },

    duration: {

        type: Number,

        required: true
    }

}, {timestamps: true});


module.exports = mongoose.model("Song", songSchema);

